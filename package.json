{
  "name": "node-hot-loader",
  "version": "0.3.3",
  "description": "Hot module replacement for Node.js applications",
  "main": "./lib/node-hot.js",
  "bin": {
    "node-hot": "./lib/node-hot.js"
  },
  "scripts": {
    "clean": "rimraf lib/",
    "build": "babel src --out-dir lib/ --copy-files",
    "prepublish": "npm run clean && npm run build",
    "patch-release": "npm version patch && npm publish && git push --follow-tags",
    "minor-release": "npm version minor && npm publish && git push --follow-tags",
    "patch": "npm version patch",
    "deploy": "npm publish",
    "unpublish": "---npm unpublish node-hot-loader@0.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emsoft/node-hot-loader"
  },
  "keywords": [
    "webpack",
    "hmr",
    "node",
    "node.js",
    "hot",
    "loader",
    "cli"
  ],
  "contributors": [
    {
      "name": "Vladimir Zhukov",
      "url": "http://github.com/emsoft"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emsoft/node-hot-loader/issues"
  },
  "homepage": "https://github.com/emsoft/node-hot-loader",
  "author": "Vladimir Zhukov",
  "dependencies": {
    "babel-register": "^6.24.1",
    "path-is-absolute": "^1.0.1",
    "source-map-support": "^0.4.15",
    "webpack": "^2.5.1",
    "yargs": "^8.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-dynamic-import-node": "^1.0.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "rimraf": "^2.6.1"
  },
  "engines": {
    "node": ">= 7"
  }
}
